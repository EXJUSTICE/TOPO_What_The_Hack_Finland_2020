<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chatImgView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-68dp"
        android:layout_toStartOf="@+id/friendView1"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/friendView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:text="TextView"
        android:textSize="35dp" />

    <ImageView
        android:id="@+id/chatImgView2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chatImgView"
        android:layout_below="@+id/chatImgView"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendView1"
        android:layout_below="@+id/chatImgView"
        android:text="TextView"
        android:textSize="35dp"/>

    <ImageView
        android:id="@+id/chatImgView3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/chatImgView"
        android:layout_below="@+id/chatImgView2"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendView1"
        android:layout_below="@+id/chatImgView2"
        android:text="TextView"
        android:textSize="35dp"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chatImgView"
        android:layout_below="@+id/chatImgView3"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/friendView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/friendView1"
        android:layout_below="@+id/chatImgView3"
        android:text="TextView"
        android:textSize="35dp" />

</RelativeLayout>